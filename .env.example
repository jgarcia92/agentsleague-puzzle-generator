# GitHub Copilot Configuration
# Get your API key from https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Model Providers (optional)
# Set which provider to use when adding LLM-powered features
# Options: openai | gemini | none
MODEL_PROVIDER=none

# OpenAI API (optional)
OPENAI_API_KEY=your_openai_key_here

# Google Gemini API (optional)
# Used by the google-generativeai Python SDK
GOOGLE_API_KEY=your_gemini_key_here

# Puzzle Generator Settings
PUZZLE_DIFFICULTY=medium
PUZZLE_CATEGORY=general
OUTPUT_FORMAT=json
